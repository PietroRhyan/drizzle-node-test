{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "Node",
    "rootDir": ".",    
    "outDir": "./dist",                             
    "baseUrl": "./",     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,                        
  },
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"],
}
